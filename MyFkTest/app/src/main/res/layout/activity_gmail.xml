<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lat.myfktest.GmailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#E53935">
        <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:background="@drawable/arrowleft"/>
        <Button
            android:id="@+id/three_vertical_dots"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:background="@drawable/dotsvertical"
            android:layout_alignParentRight="true"/>
        <Button
            android:id="@+id/message"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:background="@drawable/email"
            android:layout_toLeftOf="@+id/three_vertical_dots"/>
        <Button
            android:id="@+id/delete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/delete"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/message"/>
        <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:background="@drawable/packagedown"
            android:layout_toLeftOf="@+id/delete"/>
    </RelativeLayout>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:button="@drawable/selector3"
        android:text="CheckBox"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>
