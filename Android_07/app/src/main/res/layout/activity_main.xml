<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="toandoan.framgia.com.android_07.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="#32aa5a">

        <Button
            android:id="@+id/button_back"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_margin="@dimen/dp_2"
            android:background="@drawable/selector1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/button_back"
            android:gravity="center_vertical"
            android:text="Biểu đồ hàng đầu"
            android:textColor="#ffffff"
            android:textSize="@dimen/dp_22" />

        <Button
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp_2"
            android:background="@drawable/selector2" />
    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_50"
        android:background="#32aa5a">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal"
            android:scrollbarStyle="outsideOverlay">
            <Button

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button1"
                android:padding="@dimen/dp_10"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="ỨNG DỤNG MIỄN PHÍ PHỔ BIẾN"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button1"
                android:padding="@dimen/dp_10"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="ỨNG DỤNG CÓ TỔNG DOANH THU CAO NHẤT"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button1"
                android:padding="@dimen/dp_10"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="THỊNH HÀNH"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button1"
                android:padding="@dimen/dp_10"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="ỨNG DỤNG TRẢ PHÍ PHỔ BIẾN NHẤT"/>
        </LinearLayout>
    </HorizontalScrollView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
